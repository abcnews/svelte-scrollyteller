{
	"name": "@abcnews/svelte-scrollyteller",
	"version": "2.1.0",
	"scripts": {
		"dev": "concurrently \"vite dev\" \"svelte-package --watch\"",
		"build": "vite build",
		"preview": "vite preview",
		"package": "svelte-package",
		"test": "",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"release": "np",
		"version": "npm run package"
	},
	"np": {
		"yarn": false
	},
	"engines": {
		"node": ">=18"
	},
	"devDependencies": {
		"@sveltejs/kit": "^1.22.1",
		"@sveltejs/package": "^2.1.0",
		"concurrently": "^8.2.1",
		"np": "^8.0.4",
		"prettier": "^3.0.0",
		"sass": "^1.63.6",
		"svelte-check": "^3.4.5",
		"svelte-preprocess": "^5.0.4",
		"svelte2tsx": "^0.6.19",
		"tslib": "^2.3.1",
		"typescript": "^5.1.6",
		"typescript-transform-extensions": "^1.0.1",
		"vite": "^4.4.2"
	},
	"peerDependencies": {
		"svelte": "^4.2.8"
	},
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@abcnews/alternating-case-to-object": "^3.0.2",
		"@abcnews/mount-utils": "^3.0.0"
	},
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"svelte": "./dist/index.js"
}
