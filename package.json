{
  "name": "@abcnews/svelte-scrollyteller",
  "version": "3.0.1",
  "scripts": {
    "start": "concurrently \"vite dev\" \"svelte-package --watch\" 'vite build --watch --config vite.webcomponents.config.js'",
    "dev": "npm start",
    "package": "svelte-package && npm run package-webcomponent",
    "package-webcomponent": "npx vite build --config vite.webcomponents.config.js",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --ignore-path .gitignore --check .",
    "format": "prettier --ignore-path .gitignore --write .",
    "release": "np",
    "build": "vite build",
    "version": "npm run package",
    "test": "npm run lint"
  },
  "np": {
    "yarn": false
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@sveltejs/kit": "^2.49.0",
    "@sveltejs/package": "^2.5.6",
    "concurrently": "^9.2.1",
    "np": "^10.2.0",
    "prettier": "^3.6.2",
    "sass": "^1.94.2",
    "svelte-check": "^4.3.4",
    "svelte-preprocess": "^6.0.3",
    "svelte2tsx": "^0.7.45",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-transform-extensions": "^1.0.1",
    "vite": "^6.4.1"
  },
  "dependencies": {
    "@abcnews/alternating-case-to-object": "^3.2.0",
    "@abcnews/mount-utils": "^3.0.0"
  },
  "peerDependencies": {
    "svelte": "^5.20.4"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./wc": {
      "default": "./dist-wc/svelte-scrollyteller.js"
    }
  },
  "files": [
    "dist",
    "dist-wc"
  ],
  "svelte": "./dist/index.js"
}
