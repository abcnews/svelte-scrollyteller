{
	"name": "@abcnews/svelte-scrollyteller",
	"version": "2.1.0",
	"scripts": {
		"dev": "concurrently \"vite dev\" \"svelte-package --watch\" 'vite build --watch --config vite.webcomponents.config.js'",
		"package": "svelte-package && npm run package-webcomponent",
		"package-webcomponent": "npx vite build --config vite.webcomponents.config.js",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"release": "np",
		"version": "npm run package"
	},
	"np": {
		"yarn": false
	},
	"engines": {
		"node": ">=18"
	},
	"devDependencies": {
		"@sveltejs/kit": "^2.5.18",
		"@sveltejs/package": "^2.3.2",
		"concurrently": "^8.2.2",
		"np": "^10.0.7",
		"prettier": "^3.3.3",
		"sass": "^1.77.8",
		"svelte-check": "^3.8.4",
		"svelte-preprocess": "^6.0.2",
		"svelte2tsx": "^0.7.13",
		"tslib": "^2.6.3",
		"typescript": "^5.5.3",
		"typescript-transform-extensions": "^1.0.1",
		"vite": "^5.3.4"
	},
	"peerDependencies": {
		"svelte": "^4.2.8"
	},
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@abcnews/alternating-case-to-object": "^3.1.1",
		"@abcnews/mount-utils": "^3.0.0"
	},
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./wc": {
			"default": "./dist-wc/svelte-scrollyteller.js"
		}
	},
	"files": [
		"dist",
		"dist-wc"
	],
	"svelte": "./dist/index.js"
}
